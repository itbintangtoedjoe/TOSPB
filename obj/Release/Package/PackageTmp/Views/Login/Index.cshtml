@{
    Layout = null;
}

<!DOCTYPE html>
<html class="h-100" lang="en">

<head>

    <title>Create to PA</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/images/IconB7.png">
    <!-- <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous"> -->

    <link rel="stylesheet" type="text/css" href="~/Content/css/style.css">
    <script src="~/Content/plugins/sweetalert2/dist/sweetalert2.min.js"></script>
    <link href="~/Content/plugins/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Content/plugins/sweetalert/js/sweetalert.min.js"></script>
    <link href="~/Content/css/style.css" rel="stylesheet">
    <link href="~/Content/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <script src="~/Content/js/jquery.min.js"></script>


</head>



<body class="h-100" style="background: #E9ECEF">

    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
            <div class="loader">
                <svg class="circular" viewBox="25 25 50 50">
                    <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
                </svg>
            </div>
        </div>
    <!--*******************
        Preloader end
    ********************-->
    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            <div class="card-body pt-5">
                                <div class="col-md-12" style="text-align:center;text-align:center;display:block;margin:auto;margin-top:10px;">
                                    <img src="~/Content/images/LogoB7.png" style="width:50%;height:50%;" />
                                     <h4>Create to PA APPS</h4>
                                </div>
                                <form class="mt-5 mb-5 login-input">
                                    
                                    <select id="ddlAD" class="form-control"style="width:100%">
                                        <option value="" class="dropdown-header" selected disabled>Select Directory</option>
                                        <option value="isAD" class="dropdown-header">Active Directory</option>
                                        <option value="isNotAD" class="dropdown-header">Non Active Directory</option>
                                    </select>

                                    <div id="divInput" hidden>
                                        <br/>
                                        <div class="form-group">
                                            <input id="txtUser" type="text" class="form-control" placeholder="Username">
                                        </div>
                                        <div class="form-group">
                                            <input id="txtPass" type="password" class="form-control" placeholder="Password">
                                        </div>
                                        
                                    </div>
                                </form>
                                <button id="btnLogin" class="btn login-form__btn submit w-100" style="background: #02C0CE">Sign In</button>
                                
                                <div id="divloading" style="position:fixed;z-index:1000;margin:auto;text-align:center;margin-left:10%;margin-top:5%" hidden="hidden">
                                    <img src="~/Content/images/Loading.gif" style="width:50%;height:50%;">
                                </div>
                            </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <!--**********************************
        Scripts
    ***********************************-->
    <script src="~/Content/plugins/common/common.min.js"></script>
    <script src="~/Content/js/custom.min.js"></script>
    <script src="~/Content/js/settings.js"></script>
    <script src="~/Content/js/gleek.js"></script>
    <script src="~/Content/js/styleSwitcher.js"></script>
    <script src="~/Content/plugins/tables/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/plugins/tables/js/datatable/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/plugins/tables/js/datatable-init/datatable-basic.min.js"></script>
    <script src="~/Content/plugins/select2/js/select2.full.min.js"></script>
   
</body>
</html>



<script>
    var usernameSend = '';
    var passwordSend = '';
    var ADFlag = '';
    $(document).ready(function () {
        $('#ddlAD').select2();

        $("#btnLogin").click(function () {

            $("#divloading").attr("hidden", false);
            ADFlag = $("#ddlAD").val();
            usernameSend = $("#txtUser").val();
            passwordSend = $("#txtPass").val();


            if (usernameSend == '' || usernameSend == null || passwordSend == null || passwordSend == '') {
                
                Swal.fire({
                    title: "Warning!",
                    text: "Please Fill In Both Username and Password!",
                    type: "warning",
                    showConfirmButton: false,
                    timer: 2000
                }).then(() => {
                    location.reload();
                });
            }
            else {
                login();
            }

        });

        $(document).on('keypress',function(e) {
            if(e.which == 13) {
                $("#btnLogin").click();
            }
        });

        $('#ddlAD').change(function () {
            if ($('#ddlAD').val() == '' || $('#ddlAD').val() == null) {
                $('#divInput').attr('hidden', true);
            } else {
                $('#divInput').attr('hidden', false);
            }

        });
    });

    function login() {
        $.ajax({
            url: "LoginExec?Username=" + usernameSend + "&Password=" + passwordSend + "&ADFlag=" + ADFlag,
            type: "post",
            contentType: "application/json;charset=utf-8",
            success: function (data) {
                console.log(data)
                //alert(data)
                if (data == "true") {
                    Swal.fire({
                        title: "Warning!",
                        text: "Please Change Your Password!",
                        type: "warning",
                        showConfirmButton: false,
                        timer: 2000
                    }).then(() => {
                        window.location.replace("/Login/ChangePassword");
                    });

                }
                else if (data == "false") {
                    window.location.replace("/ConvertToPA/HomePage");

                }
                else if (data == "ADMIN") {
                    Swal.fire({
                        title: "Success!",
                        text: "Logged In as Admin",
                        type: "success",
                        showConfirmButton: false,
                        timer: 1000
                    }).then(() => {
                        window.location.replace("/ConvertToPA/HomePage");
                    });
                }
                else if (data == "FINAR") {
                    Swal.fire({
                        title: "Success!",
                        text: "Logged In as FINAR",
                        type: "success",
                        showConfirmButton: false,
                        timer: 1000
                    }).then(() => {
                        window.location.replace("/ConvertToPA/HomePage");
                    });
                }
                else if (data == "UNVALID") {
                    Swal.fire({
                        title: "Error!",
                        text: "Account Not Registered!",
                        type: "error",
                        showConfirmButton: false,
                        timer: 2000
                    }).then(() => {
                        location.reload();
                    });
                }
                else if (data == "Wrong Credentials") {
                    Swal.fire({
                        title: "Error!",
                        text: "Username or Password is Wrong!",
                        type: "error",
                        showConfirmButton: false,
                        timer: 2000
                    }).then(() => {
                        location.reload();
                    });
                }
                else if (data == "Wrong AD") {
                    Swal.fire({
                        title: "Error!",
                        text: "User is in Active Directory!",
                        type: "error",
                        showConfirmButton: false,
                        timer: 2000
                    }).then(() => {
                        location.reload();
                    });
                }
            },
            error: function (errormessage) {
                setTimeout(function () {
                    login();
                }, 1000);
            }
        });
    }
</script>

